.vbox-box
  position: absolute
  background-color: #FFF
  overflow: hidden
  z-index: 100
  user-select: none
  -moz-user-select: none
  -webkit-user-select: none
  -ms-user-select: none
    
  &__content
    position: absolute
    display: flex
    justify-content: center
    align-items: center
    top: 0px
    left: 0px
    width: 100%
    height: 100%
    z-index: 100
    
  .fa
    font-size: 14px
    
  &__resize--rotate-45
    -webkit-transform: rotate(45deg)
    -moz-transform: rotate(45deg)
    -ms-transform: rotate(45deg)
    -o-transform: rotate(45deg)
    transform: rotate(45deg)
    
  &__overlay
    background-color: #3273DC
    opacity: 0.2
    width: 100%
    height: 100%
    position: absolute
    z-index: 101
    cursor: pointer
    user-select: none
    -moz-user-select: none
    -webkit-user-select: none
    -ms-user-select: none
    -webkit-tap-highlight-color: rgba(255, 255, 255, 0)
    
  &__overlay--hidden
    opacity: 0
    
  &--output-mode
    .vbox-box__content
      cursor: auto
      
    .vbox-box__resize
      display: none
    
  &--input-mode
    .vbox-box__content
      cursor: pointer
      
    .vbox-box__resize
      display: initial
      width: 15px
      height: 18px
      position: absolute
      bottom: 0px
      right: 0px
      color: #9e9e9e
      cursor: se-resize
      z-index: 102